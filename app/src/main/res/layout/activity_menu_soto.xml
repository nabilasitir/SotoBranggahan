<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuSoto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makanan"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:padding="15dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:id="@+id/tv_1"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/iv_soto1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_1"
        android:padding="10dp"
        android:src="@drawable/soto1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soto Ayam"
        android:textSize="20dp"
        android:padding="10dp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/tv_1"
        android:layout_toRightOf="@id/iv_soto1"
        android:id="@+id/tv_soto1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp. 12000"
        android:textSize="20dp"
        android:padding="10dp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/tv_soto1"
        android:layout_toRightOf="@id/iv_soto1"
        android:id="@+id/harga1"
        />
    <EditText
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@id/tv_soto1" />

    <ImageView
        android:id="@+id/iv_soto2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/iv_soto1"
        android:padding="10dp"
        android:src="@drawable/soto2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/harga1"
        android:layout_toRightOf="@id/iv_soto2"
        android:text="Soto Daging"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/tv_soto2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_soto2"
        android:text="Rp 15000"
        android:padding="10dp"
        android:textSize="20dp"
        android:layout_below="@id/tv_soto2"
        android:id="@+id/harga2"
        />
    <EditText
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/harga1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@id/tv_soto1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minuman"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:padding="15dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/harga2"
        android:id="@+id/tv_minuman"
        />

    <ImageView
        android:id="@+id/iv_esteh"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_minuman"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:src="@drawable/esteh" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Es Teh"
        android:layout_below="@id/iv_esteh"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:id="@+id/tv_esteh" />
    <TextView
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="Rp 4000"
    android:layout_below="@id/tv_esteh"
    android:textAlignment="center"
    android:layout_marginLeft="15dp"
    android:textSize="15dp"
    android:id="@+id/hargaesteh"
    />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hargaesteh"
        android:layout_marginLeft="15dp"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/iv_esteh"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/estebu"
        android:id="@+id/iv_estebu"/>

    <TextView
        android:id="@+id/tv_estebu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_estebu"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tv_esteh"
        android:gravity=""
        android:text="Es Tebu"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/hargaestebu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_estebu"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/tv_esteh"
        android:text="Rp 6000"
        android:textAlignment="center"
        android:textSize="15dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hargaestebu"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="-4dp"
        android:layout_toRightOf="@id/hargaesteh"
        android:id="@+id/edittext4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:padding="15dp"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/edittext4"

        />
</RelativeLayout>